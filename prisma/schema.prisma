generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_ROLE {
  ADMIN
  MANAGER
  EMPLOYEE
}

model Company {
  id         Int        @id @default(autoincrement())
  name   String
  domain String?
  teams  Team[]
  users  User[]
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  companyId Int
  company   Company  @relation(fields: [companyId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  // Many-to-many members
  users     User[]
}

model User {
  id        Int          @id @default(autoincrement())
  name      String
  surname   String
  email     String       @unique
  password  String
  phone     String?
  role      USER_ROLE
  companyId Int
  company   Company   @relation(fields: [companyId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  // Self-relation for boss/subordinates
  bossId       Int?
  boss         User?     @relation("UserBoss", fields: [bossId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  subordinates User[]    @relation("UserBoss")

  // Many-to-many relation: a user can be a member of many teams
  teams        Team[]
}
