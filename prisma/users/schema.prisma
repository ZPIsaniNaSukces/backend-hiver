generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_ROLE {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum LEAVE_STATUS {
  PENDING
  APPROVED
  REJECTED
}

enum ACCOUNT_STATUS {
  UNVERIFIED
  VERIFIED
  SUSPENDED
}

model Company {
  id     Int     @id @default(autoincrement())
  name   String
  domain String?
  teams  Team[]
  users  User[]
}

model Team {
  id        Int     @id @default(autoincrement())
  name      String
  companyId Int
  company   Company @relation(fields: [companyId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  // Many-to-many members
  users     User[]

  leaderId Int?
  leader   User? @relation("TeamLeader", fields: [leaderId], references: [id])
}

model User {
  id           Int       @id @default(autoincrement())
  name         String?
  surname      String?
  email        String    @unique
  password     String
  phone        String?
  dateOfBirth  DateTime?
  title        String?
  role         USER_ROLE
  companyId    Int
  company      Company   @relation(fields: [companyId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  accountStatus ACCOUNT_STATUS @default(UNVERIFIED)
  // Self-relation for boss/subordinates
  bossId       Int?
  boss         User?     @relation("UserBoss", fields: [bossId], references: [id], onDelete: SetNull, onUpdate: NoAction)
  subordinates User[]    @relation("UserBoss")

  // Many-to-many relation: a user can be a member of many teams
  teams Team[]
  ledTeams Team[] @relation("TeamLeader")
}

// Leave Requests Microservice Models
model LeaveRequestUserInfo {
  id                 Int  @id
  bossId             Int?
  companyId          Int
  availableLeaveDays Int  @default(20)

  LeaveRequest     LeaveRequest[]
  approvedRequests LeaveRequest[] @relation("LeaveRequestApprover")
}

model LeaveRequest {
  id           Int          @id @default(autoincrement())
  userId       Int
  startsAt     DateTime
  endsAt       DateTime
  reason       String
  status       LEAVE_STATUS
  approvedById Int?

  user       LeaveRequestUserInfo  @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  approvedBy LeaveRequestUserInfo? @relation("LeaveRequestApprover", fields: [approvedById], references: [id], onDelete: SetNull, onUpdate: NoAction)
}
